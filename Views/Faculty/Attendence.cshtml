@model School_Management_System_Practicum.Models.Attendence
@{
    ViewData["Title"] = "Attendence";
    Layout = "~/Views/Shared/Facultylayout.cshtml";
}
<div class="loginpart">
    <form class="form-horizontal" enctype="multipart/form-data" asp-controller="Faculty" asp-action="Attendence" method="post">

        <div class="form-group">
            <label asp-for="date" class="col-md-2 control-label"></label><br />
            <input asp-for="date" type="date" class="form-control" />

            <span asp-validation-for="date" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Submit">
        <input type="reset" value="Clear">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <center>
            <a href="/Faculty/List">
                <input type='button' value='Attendence List' />
            </a>
        </center>
        @if (ViewBag.Message != null)
        {
            <div class="form-control">
                <div class="col-md-10">@ViewBag.Message</div>
            </div>

        }

    </form>
</div>
