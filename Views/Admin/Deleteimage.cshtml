@model IEnumerable<School_Management_System_Practicum.Models.Image>
@{
    ViewData["Title"] = "Deleteimage";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
}

<center><h2>Delete image from here</h2></center>
<div class="row">
    <div class="col-md-12">
        @if (Model.Any())
        {
            <table class="table table-hover">
                <tr>
                    <th>Image ID</th>
                    <th>Image Title</th>
                    <th>Action</th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ImageID</td>
                        <td>@item.ImageTitle</td>
                        <td>
                            @Html.ActionLink("Delete", "Imgdelete", new { id = item.ImageID })
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Image is available</p>
        }
    </div>
</div>